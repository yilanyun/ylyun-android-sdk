<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="10dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/iv_album_head"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:scaleType="fitXY"
        android:src="@drawable/yl_icon_howto_rect" />

    <ImageView
        android:id="@+id/iv_album_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/iv_album_head"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/iv_album_head"
        android:src="@drawable/icon_album"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_album_icon"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/iv_album_icon"
        android:singleLine="true"
        android:textColor="#2F2F2F"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="合集 · 川藏穷游之旅" />

    <TextView
        android:id="@+id/tv_video_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_album_head"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/iv_album_head"
        android:textColor="#919197"
        android:textSize="13sp"
        tools:text="16条视频" />

</RelativeLayout>