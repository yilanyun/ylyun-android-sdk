<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="10dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/iv_cp_head"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:scaleType="fitXY"
        android:src="@drawable/yl_icon_howto_rect" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_cp_head"
        android:layout_toRightOf="@+id/iv_cp_head"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_cp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#2F2F2F"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="合集 · 川藏穷游之旅" />

        <TextView
            android:id="@+id/tv_cp_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            tools:text="作者" />

    </LinearLayout>

</RelativeLayout>